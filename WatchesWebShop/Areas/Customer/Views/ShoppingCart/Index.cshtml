@using WatchesWebShop.Models.ViewModels
﻿
@model ShoppingCartViewModel

<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-transparent bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-primary">
                        Shopping Cart
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
            </div>
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn border-1 border-dark text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>

                </div>

                <div class="col-md-10 offset-md-1">
                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <img src="@item.Product.ImageURL" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="text-uppercase text-primary"><strong>Brand</strong></h5>
                                <p><small>@item.Product.Brand</small></p>
                                <p><small>@item.Product.Series</small></p>
                            </div>
                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-3 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        <span style="">@item.Product.Price.ToString("€0.00")</span>
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="w-75 btn-group" role="group">
                                        <a class="btn btn-primary border-0 bg-gradient w-100 py-2" style="background-color:black !important;" asp-action="Plus" asp-route-cartId="@item.Id">
                                            <i class="bi bi-plus-square"></i>
                                        </a> &nbsp;
                                        <a class="btn btn-primary border-0 bg-gradient w-100 py-2" style="background-color:black !important;" asp-action="Minus" asp-route-cartId="@item.Id">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>

                                </div>
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                    <a class="btn btn-primary border-0 bg-gradient  py-2" style="background-color:red !important;" asp-action="Remove" asp-route-cartId="@item.Id">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="card-footer  border-0" style="background-color:transparent;">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center" >
                                <h5 class="text-dark fw-semibold text-uppercase mx-auto">@Model.OrderHeader.OrderTotal.ToString("€0.00")</h5>
                                
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a class="btn btn-primary border-0 bg-gradient w-100 py-2" style="background-color:black !important;" asp-action="Summary" >Summary</a>
                    </div>
                </div>
            </div>
        </div>
</form>
