@model ShoppingCart
<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4" style="background-color:#d3e3e3 !important;">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Product.Brand</h3>
                    <p class="text-white-30 fw-semibold mb-0" style="color:cadetblue !important">by @Model.Product.Series</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a class="btn  bg-gradient mb-5 fw-semibold btn-sm text-uppercase" asp-controller="Home" asp-action="Index">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Product.ImageURL" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge" style="width:80px; height:40px; font-size: 16px; text-align:center; align-content:center; color:cadetblue; background-color:#d3e3e3;">@Model.Product.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">Reference: @Model.Product.ModelNumber </h6>
                        </div>
                        <div class="row ps-2">
                            
                        </div>
                        <div class="row text-center ps-2">
                            
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white  fw-bold">
                                <div style="color:#446e9c;">Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-info fw-bold">
                                <div style="color:#446e9c;">@Model.Product.Price.ToString()€ </div>
                            </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" name="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit"
                                            class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold" style="background-color:#0ec460 !important; border-color:#0ec460;">
                                    Add to Cart 
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>